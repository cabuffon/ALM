    <bean id="validaEntrada" class="cl.supereduc.iesb.arquetipo.negocio.rs.ValidaEntrada"/>     
	

	<!-- Data Source componente Bean -->
	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
